#!/bin/bash

args=()

for arg in ${@}; do

    if [[ "${arg}" == "-h" || "${arg}" == "--help" ]]; then
        echo "This is not a real configure script."
        exit 0
    elif [[ "${arg}" == *=* ]]; then
        arg=${arg#--}

        echo "Adding argument ${arg}"
        args+=("${arg}")
    else
        echo "Ignoring argument ${arg}"
    fi
done

echo "Running qmake"
qmake "${args}"
